	#status
		width: 75px
		height: 75px
		position: absolute
		left: 50%
		top: 50%
		margin: -10px 0 0 -33px

		.spinner
			width: 70px
			text-align: center

		.spinner > div
			width: 18px
			height: 18px
			background-color: #FFF
			border-radius: 100%
			display: inline-block
			animation: sk-bouncedelay 1.4s infinite ease-in-out both
		.spinner .bounce1
			animation-delay: -0.32s
		.spinner .bounce2
			animation-delay: -0.16s
		@keyframes sk-bouncedelay
			0%, 80%, 100%
				transform: scale(0)
			40%
				transform: scale(1.0)

