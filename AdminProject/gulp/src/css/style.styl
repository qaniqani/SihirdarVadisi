media_queries = {
  lg  : "(min-width: 1200px)",
  md  : "(min-width: 992px) and (max-width: 1199px)",
  sm : "(min-width: 768px) and (max-width: 991px)",
  xs : "(max-width: 767px)"
}

respond(breakpoints)
	conditions = ()
	for breakpoint in breakpoints
		push(conditions, media_queries[breakpoint])
	conditions = join(", ", conditions)
	@media conditions
		{block}

