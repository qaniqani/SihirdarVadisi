@using Sihirdar.DataAccessLayer
@model IEnumerable<Sihirdar.DataAccessLayer.Infrastructure.Models.Language>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-12">
            <div class="nest" id="FootableClose">
                <div class="title-alt">
                    <h6>
                        Languages
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Footable">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="Footable">
                    <p class="lead well">Please note that other languages when the data update.</p>
                    <table class="table-striped footable-res footable metro-blue" data-page-size="10">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Tag
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Options
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        @{
                            foreach (var language in Model)
                            {
                                <tr>
                                    <td>@language.Name</td>
                                    <td>@language.UrlTag</td>
                                    <td>
                                        <span class="@(language.Status == StatusTypes.Active ? "status-metro status-active" : "status-metro status-suspended")">
                                            @(language.Status == StatusTypes.Active ? "Active" : "Deactive")
                                        </span>
                                    </td>
                                    <td style="width:100px;">
                                        <a href="/Admin/Language/Edit/@language.Id" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                        <a href="/Admin/Language/Delete/@language.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to continue?')"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="pagination pagination-centered"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>