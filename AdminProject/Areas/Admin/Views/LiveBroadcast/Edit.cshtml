@model Sihirdar.DataAccessLayer.Infrastructure.Models.LiveBroadcast

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-6">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>Live Broadcast</h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#basic">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="basic">
                    <form role="form" action="/Admin/LiveBroadcast/Edit/@Model.Id" method="post">
                        <div class="form-group">
                            <label for="GameType">Game Type</label>
                            @Html.DropDownListFor(model => model.GameType, ViewBag.GameTypeList as SelectList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="PublishAddress">Publish Address</label>
                            @Html.TextBoxFor(model => model.PublishAddress, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="ChatAddress">Chat Address</label>
                            @Html.TextBoxFor(model => model.ChatAddress, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Live">Live</label><br />
                            @Html.CheckBoxFor(model => model.Live, new {  })
                        </div>
                        <div class="form-group">
                            <label for="Url">Url</label>
                            @Html.TextBoxFor(model => model.Url, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="SequenceNumber">Sequence Number</label>
                            @Html.TextBoxFor(model => model.SequenceNumber, new { @class = "form-control", value = "9999", type = "number" })
                        </div>
                        <div class="form-group">
                            <label for="Status">Status</label>
                            @Html.DropDownListFor(model => model.Status, ViewBag.StatusList as SelectList, new { @class = "form-control" })
                        </div>
                        <button class="btn btn-info" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>