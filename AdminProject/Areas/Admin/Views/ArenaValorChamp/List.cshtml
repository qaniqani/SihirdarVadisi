@using Sihirdar.DataAccessLayer
@model IEnumerable<Sihirdar.DataAccessLayer.Infrastructure.Models.ArenaValorChamp>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-12">
            <div class="nest" id="FootableClose">
                <div class="title-alt">
                    <h6>
                        List of Arena of Valor
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Footable">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="Footable">
                    <table class="table-striped footable-res footable metro-blue" data-page-size="20">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Url</th>
                                <th>Create Date</th>
                                <th>Status</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var arena in Model)
                                {
                                    <tr>
                                        <td>@arena.Name</td>
                                        <td>@arena.Url</td>
                                        <td>@string.Format("{0:dd.MM.yyyy HH:mm:ss}", arena.CreateDate)</td>
                                        <td>
                                            <span class="@(arena.Status == StatusTypes.Active ? "status-metro status-active" : "status-metro status-suspended")">
                                                @(arena.Status == StatusTypes.Active ? "Active" : "Deactive")
                                            </span>
                                        </td>
                                        <td style="width:100px;">
                                            <a href="/Admin/ArenaValorChamp/Edit/@arena.Id" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                            <a href="/Admin/ArenaValorChamp/Delete/@arena.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to continue?')"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <div class="pagination pagination-centered"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>