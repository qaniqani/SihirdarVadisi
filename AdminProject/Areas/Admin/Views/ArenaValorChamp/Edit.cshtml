@model Sihirdar.DataAccessLayer.Infrastructure.Models.ArenaValorChamp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-6">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>Arena of Valor Champion</h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#basic">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="basic">
                    <form role="form" id="admin-form" action="/Admin/ArenaValorChamp/Edit/@Model.Id" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Name">Name</label>
                            @Html.TextBoxFor(model => model.Name, new { placeholder = "Sample: John Doe", @class = "form-control validate[required,minSize[1]]", maxlength = "200" })
                        </div>
                        <div class="form-group">
                            <label for="Detail">Detail</label>
                            @Html.TextAreaFor(model => model.Detail, new { @class = "richEditor" })
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label for="Picture">Picture</label>
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1">@TempData["LanguageTag"]</span>
                                    @Html.TextBoxFor(model => model.Picture, new { @class = "form-control", type = "file" })
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Picture))
                                {
                                    <br />
                                    <img id="downloadImage" src="/Content/@(Model.Picture)" style="max-height:150px; max-width:200px; display: block;" />
                                }
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label for="Url">Url</label>
                            @Html.TextBoxFor(model => model.Url, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Status">Status</label>
                            @Html.DropDownListFor(model => model.Status, ViewBag.StatusList as SelectList, new { @class = "form-control" })
                        </div>
                        <button class="btn btn-info" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>