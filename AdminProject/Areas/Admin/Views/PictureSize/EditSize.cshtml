@model Sihirdar.DataAccessLayer.Infrastructure.Models.PictureSizeDetail

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Size";
}


<div class="content-wrap">
    <div class="row">
        <div class="col-md-6">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>Size </h6>
                    <div class="titleToggle"><a class="nav-toggle-alt" href="#basic"><span class="entypo-up-open"></span></a></div>
                </div>
                <div class="body-nest" id="basic">
                    <form role="form" action="/Admin/PictureSize/EditSize/@ViewBag.Id?sizeId=@Model.Id" method="post">
                        <div class="form-group">
                            <label for="Width">Selected Size Subject</label>
                            <br />
                            @ViewBag.Size.Name
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <label for="Width">Width (px)</label>
                            @Html.TextBoxFor(model => model.Width, new { placeholder = "", @class = "form-control validate[required]", type = "number", maxlength = "20" })
                        </div>
                        <div class="form-group">
                            <label for="Height">Height (px)</label>
                            @Html.TextBoxFor(model => model.Height, new { placeholder = "", @class = "form-control validate[required]", type = "number", maxlength = "20" })
                        </div>
                        <button class="btn btn-info" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
