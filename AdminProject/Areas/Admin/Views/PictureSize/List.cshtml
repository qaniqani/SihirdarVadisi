@using Sihirdar.DataAccessLayer
@model IEnumerable<Sihirdar.DataAccessLayer.Infrastructure.Models.PictureSize>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-12">
            <div class="nest" id="FootableClose">
                <div class="title-alt">
                    <h6>
                        Picture Sizes
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Footable">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="Footable">
                    <table class="table-striped footable-res footable metro-blue" data-page-size="10">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Size Type
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Options
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var size in Model)
                                {
                                    <tr>
                                        <td>@size.Name</td>
                                        <td>@size.PictureType.ToString()</td>
                                        <td>
                                            <span class="@(size.Status == StatusTypes.Active ? "status-metro status-active" : "status-metro status-suspended")">
                                                @(size.Status == StatusTypes.Active ? "Active" : "Deactive")
                                            </span>
                                        </td>

                                        <td style="width:290px;">
                                            <a href="/Admin/PictureSize/AddSize/@size.Id" class="btn btn-success" data-fancybox-type="iframe" >Add New Size</a>
                                            <a href="/Admin/PictureSize/ListSize/@size.Id" class="btn btn-info" data-fancybox-type="iframe" >List Sizes</a>
                                            <a href="/Admin/PictureSize/Edit/@size.Id" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                            <a href="/Admin/PictureSize/Delete/@size.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to continue?')"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="pagination pagination-centered"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>