@using Sihirdar.DataAccessLayer
@model IEnumerable<Sihirdar.DataAccessLayer.Infrastructure.Models.PromiseDay>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-12">
            <div class="nest" id="FootableClose">
                <div class="title-alt">
                    <h6>
                        Word of the Day
                    </h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#Footable">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="Footable">
                    <p class="lead well">Please note that other languages when the data update.</p>
                    <table class="table-striped footable-res footable metro-blue" data-page-size="10">
                        <thead>
                            <tr>
                                <th>
                                    Teller
                                </th>
                                <th>
                                    Publish Date
                                </th>
                                <th>
                                    Short Desc
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Options
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var promise in Model)
                                {
                                    <tr>
                                        <td>@promise.Teller</td>
                                        <td>@promise.PublishDate.ToString("dd.MM.yyyy")</td>
                                        <td>@(promise.Promise.Length > 100 ? promise.Promise.Substring(0, 100) + "..." : promise.Promise)</td>
                                        <td>
                                            <span class="@(promise.Status == StatusTypes.Active ? "status-metro status-active" : "status-metro status-suspended")">
                                                @(promise.Status == StatusTypes.Active ? "Active" : "Deactive")
                                            </span>
                                        </td>
                                        <td style="width:100px;">
                                            <a href="/Admin/PromiseDay/Edit/@promise.Id" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                            <a href="/Admin/PromiseDay/Delete/@promise.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to continue?')"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <div class="pagination pagination-centered"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>