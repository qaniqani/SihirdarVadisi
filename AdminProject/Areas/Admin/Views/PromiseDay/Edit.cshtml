@model Sihirdar.DataAccessLayer.Infrastructure.Models.PromiseDay

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-6">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>Word of the Day</h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#basic">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="basic">

                    <form role="form" action="/Admin/PromiseDay/Edit/@Model.Id" method="post">
                        <div class="form-group">
                            <label for="Promise">Word of the Day</label>
                            @Html.TextAreaFor(model => model.Promise, new { placeholder = "", @class = "form-control validate[required,minSize[3]]" })
                        </div>
                        <div class="form-group">
                            <label for="Teller">Teller</label>
                            @Html.TextBoxFor(model => model.Teller, new { placeholder = "Sample: john doe", @class = "form-control validate[required, minSize[3]]" })
                        </div>
                        <div class="form-group">
                            <label for="PublishDate">Publish Date</label>
                            <div class="datetimepicker1 input-group date">
                                @Html.TextBoxFor(model => model.PublishDate, "{0:dd.MM.yyyy}", new { placeholder = "dd.MM.YYYY", @class = "form-control validate[required]", @data_format = "dd.MM.yyyy hh:mm:ss" })
                                <span class="input-group-addon add-on">
                                    <i style="font-style:normal;" data-time-icon="entypo-clock" data-date-icon="entypo-calendar">
                                    </i>
                                </span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="Status">Status</label>
                            @Html.DropDownListFor(model => model.Status, ViewBag.StatusList as SelectList, new { @class = "form-control" })
                        </div>
                        <button class="btn btn-info" type="submit">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>