@model Sihirdar.DataAccessLayer.Infrastructure.Models.Survey

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-md-6">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>Survey</h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#basic">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="basic">
                    <form role="form" action="/Admin/Survey/Edit/@Model.Id" method="post">
                        <div class="form-group">
                            <label for="Question">Question</label>
                            @Html.TextBoxFor(model => model.Question, new { @class = "form-control validate[required,minSize[3]]" })
                        </div>
                        <div class="form-group" style="display:none;">
                            <label for="QuestionType">Question Type</label>
                            @Html.DropDownListFor(model => model.QuestionType, ViewBag.QuestionTypeList as SelectList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="StartDate">Start Date</label>
                            <div class="datetimepicker1 input-group date">
                                @Html.TextBoxFor(model => model.StartDate, "{0:dd.MM.yyyy}", new { placeholder = "dd.MM.yyyy", @class = "form-control validate[required,minSize[3]]", @data_format = "dd.MM.yyyy" })
                                <span class="input-group-addon add-on">
                                    <i style="font-style:normal;" data-time-icon="entypo-clock" data-date-icon="entypo-calendar">
                                    </i>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="EndDate">End Date</label>
                            <div class="datetimepicker1 input-group date">
                                @Html.TextBoxFor(model => model.EndDate, "{0:dd.MM.yyyy}", new { placeholder = "dd.MM.yyyy", @class = "form-control validate[required,minSize[3]]", @data_format = "dd.MM.yyyy" })
                                <span class="input-group-addon add-on">
                                    <i style="font-style:normal;" data-time-icon="entypo-clock" data-date-icon="entypo-calendar">
                                    </i>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Status">Status</label>
                            @Html.DropDownListFor(model => model.Status, ViewBag.StatusList as SelectList, new { @class = "form-control" })
                        </div>
                        <button class="btn btn-info" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>