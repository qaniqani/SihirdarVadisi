@model Sihirdar.DataAccessLayer.Infrastructure.Models.User

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit User";
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".userStatus").change(function () {
            var selectedValue = $(this).val();
            if (selectedValue == "3")
                $("#banMessage").show();
            else
                $("#banMessage").hide();
        });
    });
</script>

<div class="content-wrap">
    <div class="row">
        <div class="col-sm-6">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>Edit User</h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#basic">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="basic">
                    <form role="form" action="/Admin/User/Edit/@Model.Id" method="post">
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label for="SignIn">Sign In</label><br />
                            @Html.DisplayFor(model => model.SignInType)
                        </div>
                        <div class="form-group">
                            <label for="DefaultLanguageId">Default Language</label>
                            @Html.DropDownListFor(model => model.DefaultLanguageId, ViewBag.LanguageTypes as SelectList, new { @class = "form-control", style = "width:200px;" })
                        </div>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            @Html.TextBoxFor(model => model.Name, new {@class = "form-control validate[required]", placeholder = "Sample: John"})
                        </div>
                        <div class="form-group">
                            <label for="Surname">Surname</label>
                            @Html.TextBoxFor(model => model.Surname, new {@class = "form-control validate[required]", placeholder = "Sample: Doe"})
                        </div>
                        <div class="form-group">
                            <label for="Gender">Gender</label>
                            @Html.DropDownListFor(model => model.Gender, ViewBag.GenderTypes as SelectList, new { @class = "form-control", style = "width:200px;" })
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control validate[required]" })
                        </div>
                        <div class="form-group">
                            <label for="Gsm">Gsm</label>
                            @Html.TextBoxFor(model => model.Gsm, new { @class = "form-control validate[required]" })
                        </div>
                        <div class="form-group">
                            <label for="InterestAreas">Interest Areas</label>
                            @Html.TextBoxFor(model => model.InterestAreas, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control validate[required]", type="password" })
                        </div>
                        <div class="form-group">
                            <label for="ActivationCode">Activation Code</label>
                            @Html.TextBoxFor(model => model.ActivationCode, new { @class = "form-control", disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label for="LastLoginDate">Last Login Date</label>
                            @Html.TextBoxFor(model => model.LastLoginDate, "{0:dd.MM.yyyy HH:mm:ss}", new { @class = "form-control", disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label for="Status">Status</label>
                            @Html.DropDownListFor(model => model.Status, ViewBag.UserTypes as SelectList, new { @class = "form-control userStatus", style = "width:200px;" })
                        </div>
                        <div class="form-group" id="banMessage" style="display:none;">
                            <label for="BannedMessage">Banned Message</label>
                            @Html.TextAreaFor(model => model.BannedMessage, new { @class = "form-control" })
                        </div>
                        <button class="btn btn-info" type="submit">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
