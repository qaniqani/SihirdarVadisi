						<script>
                            $(document).ready(function ($) {
	                            var result;
                                $('.answer').on('click', function () {
                                   var self = $(this);
                                   self.parent().find('.checked').removeClass('checked');
                                   self.addClass('checked');

                                   var questions = $('.answers'),
                                       answers = $('.checked'),
                                       message = $('#totalAnswers');
                                   if(questions.length !== answers.length){
                                       message.show();
                                   } else {
                                       message.hide();
                                       var point = 0;
                                       answers.each(function () {
                                           point += $(this).data('choice');
                                       });

                                       if (point < 10)
                                           result = 0;
                                       else if (point >= 10 && point < 16)
                                           result = 1;
                                       else if (point >= 16)
                                           result = 2;
                                       else
                                           result = 0;

                                       $('.answerResult').each(function (k, t) {
                                           if(k == result) {
                                               $(this).fadeIn();
                                               $('body').animate({scrollTop: $(this).offset().top - 50}, 500);
                                           } else {
                                               $(this).hide(0);
                                           }
                                       });
                                   }
                                });
	                            
	                            $(".ogBtn").on("click", function (e) {
		                            e.preventDefault();
		                            /*window.FB.ui({
		                                display: 'popup',
		                                method: 'feed',
		                                link: "https://www.sihirdarvadisi.com/araclar/testler/aslinda-hangi-kumedesin",
		                                picture: resultImage,
		                                name: resultName,
		                                caption: 'Ekleyen: SihirdarVadisi.com',
		                                description: resultDesc
		                            });*/
		                            if (!result)
			                            result = '';
		                            else
			                            result = result + 1;
		                            window.FB.ui({
			                            method: 'share',
			                            display: 'popup',
			                            href: 'https://www.sihirdarvadisi.com/araclar/testler/aslinda-hangi-kumedesin?q=' + result,
			                            hashtag: '#sihirdarvadisi',
			                            redirect_uri: 'https://www.sihirdarvadisi.com/araclar/testler/aslinda-hangi-kumedesin'
		                            }, function(res) {
			                            console.log(res);
		                            });
	                            });
                            });
