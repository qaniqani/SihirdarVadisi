@model AdminProject.Infrastructure.Models.File

@{
    ViewBag.Title = "Edit";
}

<div class="content-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="nest" id="basicClose">
                <div class="title-alt">
                    <h6>File</h6>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#basic">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="basic">
                    <div class="form_center">
                        <form role="form" action="/File/Edit" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="Name">Name</label>
                                @Html.HiddenFor(model => model.Id)
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="FileUrl">File/ Picture</label>
                                @Html.TextBoxFor(model => model.FileUrl, new {@type = "file", @class = "form-control", required = "required"})
                            </div>
                            <div class="form-group">
                                <label>File Url</label>
                                <a href="/Content/File/@Model.FileUrl" target="_blank">@Model.FileUrl</a>
                                @Html.TextBoxFor(model => model.FileUrl, new { @type = "file", @class = "form-control", required = "required" })
                            </div>

                            @*<div class="form-group">
                                    <label for="Status">Status</label>
                                    @Html.DropDownListFor(model => model.Status, ViewBag.StatusList as SelectList, new { @class = "form-control" })
                                </div>*@
                            <button class="btn btn-info" type="submit">Submit</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
